{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "central-route": {
        "ClusterId": "central-cluster",
        "Match": {
          "Path": "/api/central/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "inventario-route": {
        "ClusterId": "inventario-cluster", 
        "Match": {
          "Path": "/api/inventario/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "facturacion-route": {
        "ClusterId": "facturacion-cluster",
        "Match": {
          "Path": "/api/facturacion/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "central-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5064/"
          }
        }
      },
      "inventario-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5031/"
          }
        }
      },
      "facturacion-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5098/"
          }
        }
      }
    }
  }
}
